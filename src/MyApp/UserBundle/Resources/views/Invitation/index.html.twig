{% extends 'MyAppUserBundle:Default:base.html.twig' %}
{% block body -%}
    <h1>Invitation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Code</th>
                <th>Email</th>
                <th>Sent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('invitation_show', { 'code': entity.code }) }}">{{ entity.code }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.sent }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('invitation_show', { 'code': entity.code }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('invitation_edit', { 'code': entity.code }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('invitation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
