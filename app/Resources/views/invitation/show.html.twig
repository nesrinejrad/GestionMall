{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invitation</h1>

    <table>
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ invitation.code }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ invitation.email }}</td>
            </tr>
            <tr>
                <th>Sent</th>
                <td>{% if invitation.sent %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invitation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('invitation_edit', { 'code': invitation.code }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
